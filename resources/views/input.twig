<select class="igdb-game-select form-control" name="{{ field_type.input_name }}" {{ field_type.getMultiple() ? 'multiple' }}
        {{ html_attributes(field_type.attributes) }} data-deletable="true" type="text" value="preset-1,preset-2" placeholder="{{ trans(field_type.placeholder) }}">
    <optgroup label="In Use">
        {% for value, option in field_type.getOptions() %}
            <option value="{{ value }}" {{ value == field_type.key ? 'selected' }}>{{ trans(option) }}</option>
        {% endfor %}
    </optgroup>
    <optgroup label="IGDB Search">

    </optgroup>
</select>

